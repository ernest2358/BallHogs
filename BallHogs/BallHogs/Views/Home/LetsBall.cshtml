@model List<BHTeam>

@{
    ViewData["Title"] = "LetsBall";
}

<h1>LetsBall</h1>

<form asp-controller="Home" asp-action="LetsBall" method="post">

    <h2>Home</h2>
    <p>
        <div>
            Please choose a home team: 
        </div>
        @foreach (var team in Model)
        {
            @if (team.ManagerName == ViewBag.UID)
            {
                <input type="radio" checked="checked" name="homeId" value="@team.BHTeamId">@team.TeamName<br>
            }
        }
    </p>
    <h2>Away</h2>
    <p>
        <div>
            Please choose an away team:
        </div>
        @foreach (var team in Model)
        {
            @if (team.ManagerName != ViewBag.UID)
            {
                <input type="radio" checked="checked" name="awayId" value="@team.BHTeamId">@team.TeamName<br>
            }
        }
    </p>
    <p>
        <div>
            Please select game/series:
        </div>
        <input type="radio" checked="checked" name="games" value="1"> Play 1 Game<br>
        <input type="radio" name="games" value="3"> Play 3-Game Series<br>
        <input type="radio" name="games" value="5"> Play 5-Game Series<br>
        <input type="radio" name="games" value="7"> Play 7-Game Series<br>
        <input type="radio" name="games" value="null"> Play Until Both Teams Win<br>
    </p>

    <input type="submit" value="Lets Ball!" />

</form>
