@model BallHogs.Models.BHTeam

@{
    ViewData["Title"] = "Create";
}

<h1>Create your BallHog Team</h1>

<p>Please provide your team name to create a new Ballhog team</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label" value="Team Name"></label>
                <input asp-for="TeamName" class="form-control"/>
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
