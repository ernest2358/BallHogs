@model IEnumerable<BallHogs.Models.BHTeam>

@{
    ViewData["Title"] = "Index";
}

<h1>BHTeams</h1>

<p>
    <a asp-action="Create">Create a New BHTeam</a>
</p>
<p>
    Please see team details to ensure your team has 5 players
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Team Name
            </th>
            <th>
                Manager Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerName)
            </td>
            @if (item.ManagerName == ViewBag.UID)
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.BHTeamId">Manage Team Roster</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BHTeamId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.BHTeamId">Delete</a>
                </td>

            }
        </tr>
        }
    </tbody>
</table>
